@model UpdateMe.Models.CourseReviewViewModel
@{
    ViewBag.Title = "ReviewCourse";
    var arr = new string[@Model.Questions.Count()];
    var courseId = Model.Id;
}

<div>
    @using (Html.BeginForm("TakeQuiz", "Courses", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        for (int i = 0; i < Model.Questions.Count; i++)
        {
            @Html.HiddenFor(m => Model.Questions[i].Id)
            <div>
                <h4>@Model.Questions[i].QuestionText</h4>

                @for (int j = 0; j < Model.Questions[i].Answers.Length; j++)
                    {
                    <label>
                        @Html.RadioButtonFor(m => Model.Questions[i].SelectedAnwser, Model.Questions[i].Answers[j])
                        @Model.Questions[i].Answers[j];
                    </label><br />
                }
            </div><br />
        }
        <div><input type="submit" value="Submit" /></div>
    }
</div>
