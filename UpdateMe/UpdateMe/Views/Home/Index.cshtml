@model List<UpdateMe.Data.Models.CourseViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>UPDATE ME</h1>
    <p class="lead">Corporate learning system</p>
    <p><a href="/courses/listusercourses" class="btn btn-primary btn-lg">Start Now &raquo;</a></p>
</div>

<div class="row">
    @for (int i = 0; i < Model.Count() && i < 3; i++)
    {
        <div class="col-md-4">
            <h2>@Model[i].Name</h2>
            <p>
                @Model[i].Description
            </p>
        </div>
    }
</div>